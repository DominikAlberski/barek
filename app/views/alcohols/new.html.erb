<h1>Add Alcohole</h1>

<%= simple_form_for @alcohol do |f| %>
  <%= f.input :name %>
  <%= f.input :brand %>
  <%= f.input :kind, required: true, collection: %w(vodka whiskey wine liqueur other) %>
  <%= f.input :country %>
  <%= f.input :alk %>
  <%= f.input :price %>
  <%= f.input :photo %>

  <%= f.button :submit %>
<% end %>

